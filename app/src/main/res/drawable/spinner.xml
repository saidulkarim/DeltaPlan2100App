<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding android:bottom="4dp" android:left="4dp" android:right="8dp" android:top="4dp" />
                    <gradient android:angle="270"  />
                    <stroke android:width="2px" android:color="#66FFFFFF" />
                    <corners android:radius="3dp" />
                    <solid android:color="#99FFFFFF" />
                </shape>
            </item>

            <item>
                <bitmap android:gravity="center|right" android:src="@drawable/droparrow" android:tint="@color/DarkSlateGray" />
            </item>
        </layer-list>
    </item>
</selector>