<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.layer_three.LayerThreeFragment">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Hello"
        android:textAlignment="center" />

    <SearchView
        android:id="@+id/layer_three_list_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A3F2FD"
        android:queryHint="Enter your text here"></SearchView>

    <ListView
        android:id="@+id/layer_three_list_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EAFAFC"
        android:divider="#3596A8"
        android:dividerHeight="1sp"
        android:listSelector="#30D7ED" />
</FrameLayout>