<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_theme"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/titillium_regular"
        android:text="@string/macroeconomic_indicators"
        android:textColor="@color/colorWhite"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/spnrMacroEconIndicator"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/spinner"
        android:gravity="left|center"
        android:spinnerMode="dropdown" />

    <!-- First Row-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/btnLineChart"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical">

            <com.cegis.deltaplan2100.utility.FontawesomeLight
                android:id="@+id/txtLineChart"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:text="Line Chart"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="45dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnBarChart"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical">

            <com.cegis.deltaplan2100.utility.FontawesomeLight
                android:id="@+id/txtBarChart"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:text="Bar Chart"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="45dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnPieChart"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical">

            <com.cegis.deltaplan2100.utility.FontawesomeLight
                android:id="@+id/txtPieChart"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:text="Pie Chart"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="45dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnTableView"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical">

            <com.cegis.deltaplan2100.utility.FontawesomeLight
                android:id="@+id/txtTableView"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:text="Table View"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="45dp" />
        </LinearLayout>
    </LinearLayout>
    <!-- First Row-->

    <!-- Second Row-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnViewReport"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center|center"
            android:text="View Report"
            android:tint="@color/DarkSlateGray" />
    </LinearLayout>
    <!-- Second Row-->

    <!-- Third Row-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!-- Third Row-->
</LinearLayout>